
#ifndef _TRACK_REGION_EXTRACTOR_H_
#define _TRACK_REGION_EXTRACTOR_H_

#include <ros/ros.h>
#include <ros/console.h>

#include <opencv2/opencv.hpp>
#include <opencv2/highgui/highgui.hpp>
#include <opencv2/cudaoptflow.hpp>
#include <opencv2/cudaarithm.hpp>
#include <opencv2/cudaimgproc.hpp>

#include <cv_bridge/cv_bridge.h>
#include <sensor_msgs/Image.h>
#include <sensor_msgs/image_encodings.h>

#include <boost/thread/mutex.hpp>

class TrackRegionExtractor{
    
 private:
    boost::mutex lock_;
    ros::NodeHandle pnh_;
    ros::Subscriber sub_image_;
    ros::Publisher pub_image_;
     unsigned int threads_;

 protected:
    virtual void onInit();
    virtual void subscribe();
    virtual void unsubscribe();
    
 public:
    TrackRegionExtractor();
    void callback(const sensor_msgs::Image::ConstPtr &);
    void approxTrackShape(cv::Mat &);
};


#endif  // _TRACK_REGION_EXTRACTOR_H_
